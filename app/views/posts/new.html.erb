
<%= form_for(@post) do |t| %>

   <%= t.label :title %>
   <%= t.text_field :title  %><br><br>

   <%= t.label :content %>
   <%= t.text_field :content  %><br><br>
   
   <%= t.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
   <h2>Add new category for post</h2>
   <%= t.fields_for :categories_attr, @post.categories.build do |categories_fields| %>
   <%= t.label :category_name %>
    <%= categories_fields.text_field :name %>
  <% end %><br><br>


   <%= t.submit "Create Post" %>


<% end %>